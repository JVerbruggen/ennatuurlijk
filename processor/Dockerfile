FROM python:3.11-slim

ARG AZURE_SERVICE_BUS_QUEUE_NAME
ARG AZURE_SERVICE_BUS_CONNECTION_STRING
ARG AZURE_TABLE_STORAGE_TABLE_NAME
ARG AZURE_TABLE_STORAGE_CONNECTION_STRING

ENV AZURE_SERVICE_BUS_QUEUE_NAME=${AZURE_SERVICE_BUS_QUEUE_NAME}
ENV AZURE_SERVICE_BUS_CONNECTION_STRING=${AZURE_SERVICE_BUS_CONNECTION_STRING}
ENV AZURE_TABLE_STORAGE_TABLE_NAME=${AZURE_TABLE_STORAGE_TABLE_NAME}
ENV AZURE_TABLE_STORAGE_CONNECTION_STRING=${AZURE_TABLE_STORAGE_CONNECTION_STRING}

ADD . .
RUN python -m pip install -r requirements.txt
CMD ["python", "./main.py"]
